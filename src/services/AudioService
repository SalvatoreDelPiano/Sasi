import { Injectable } from '@angular/core';

// @Injectable({
//   providedIn: 'root'
// })
    
export class AudioService {
  private audio = new Audio();

  playAudio(url: string) {
    this.audio.src = url;
    this.audio.load();
    this.audio.play();
  }

  stopAudio() {
    this.audio.pause();
    this.audio.currentTime = 0;
  }
}
